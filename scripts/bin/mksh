#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

# Test if has argument
[[ -z "${1}" ]] && echo "Need a name for script" && exit 1
arg="${1}.sh"

# Check if file exit
[[ -e "${arg}" ]] && echo "File already exist" && exit 1

# Create script
>"${arg}"

# Write scirpt
echo "#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

" > "${arg}"

# Make executable
chmod +x "${arg}"

# Open script
$EDITOR "${arg}"
