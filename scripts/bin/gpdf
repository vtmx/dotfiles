#!/usr/bin/env bash

echo

message="$@"
dotfiles_dir="$HOME/Dev/dotfiles"

if [[ ! "${mesage}" ]]; then
  message="update dotfiles"
fi

# Copy nvim folder
rm -rdf "$HOME/Dev/dotfiles/config/nvim"
cp -fr "$HOME/.config/nvim" "$HOME/Dev/dotfiles/config/nvim"

# Go to dotfiles dir
cd "${dotfiles_dir}" 

# Git commands
git add -A
git commit -m "${message}"
git push
