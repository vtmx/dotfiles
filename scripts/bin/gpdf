#!/usr/bin/env bash

echo

message=$1
dotfiles_dir="$HOME/Dev/dotfiles"

# If empt string
if [[ -z "${mesage}" ]]; then
  message="update dotfiles"
fi

# Copy nvim folder
rm -rdf "$HOME/Dev/dotfiles/config/nvim" > /dev/null
cp -r "$HOME/.config/nvim" "$HOME/Dev/dotfiles/config/nvim" > /dev/null

# Go to dotfiles dir
cd "${dotfiles_dir}" 

# Git commands
git add -A
git commit -m "${message}"
git push
