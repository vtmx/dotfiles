# reload
super + r
	bspc wm -r; notify-send 'sxhkd' 'reload'

# close window
super + c|q
	bspc node -c

# quit
super + shift + q
	bspc quit

# laucnher
super + space
	rofi -show drun
	
# terminal
super + {_,shift+}return
	{kitty,alacritty}

# toggle polybar
super + shift + b
	polybar bspwm

# toggle fullscreen
super + {_, shift +} f
	bspc node -t "~"{fullscreen},{floating,tiled}

# focus and move window
super + {_,shift+}{left|h,down|j,up|k,right|l}
	bspc node -{f,s} {west, south, north, east}

super + bracket{left|h,right|l}
	bspc node -f {prev,next}

# switch workspace or send window to other workspace
super + ctrl + {_,shift + }{left|h,right|l}
	bspc {desktop -f,node -d} {prev,next}.local

# switch and send window to other workspace
super {_shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# resize window
super + alt + {left|h,down|j,up|k,right|l}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# move focused window to the next workspace and then switch to that workspace
alt + shift + {left|h,right|l}
	id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

