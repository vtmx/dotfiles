# reload
super + r
	bspc wm -r; notify-send 'sxhkd' 'reload'

# close and kill window
super + {_,shift + }c
	bspc node -{c,k}

# quit
super + shift + q
	bspc quit

# laucnher
super + @space
	rofi -show drun -drun-display-format

# terminal
super + {_,ctrl + }Return
	{kitty,alacritty}

# browser
super + b
	vivaldi-stable

# toggle polybar
super + shift + b
	polybar bspwm

# toggle fullscreen
super + {_,shift + }f
	bspc node -t "~"{fullscreen},{floating,tiled}

#	bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled
# bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# focus and move window
super + {_,shift + }{h,Left,j,Down,k,Up,l,Right}
	bspc node -{f,s} {west,west,south,south,north,north,east,east}

# super + {_,shift + }{Left,Down,Up,Right}
# 	bspc node -{f,s} {west,south,north,east}

super + bracket{left,right}
	bspc node -f {prev,next}

# switch workspace or send window to other workspace
super + ctrl + {_,shift + }{h,Left,l,Right}
	bspc {desktop -f,node -d} {prev,prev,next,next}.local

# switch and send window to other workspace
super {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# resize window
super + alt + {h,j,k,l}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# return current desktop
# bspc query -D -d --names
# DESKTOP = ${bspc query -D -d --names}
# bspc rule -a \* -o desktop="$DESKTOP && inkspace

