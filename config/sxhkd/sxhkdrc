# reload
super + r
	bspc wm -r; notify-send 'sxhkd' 'reload'

# close window
super + {c,q}
	bspc node -c

# quit
super + shift + q
	bspc quit

# laucnher
super + space
	rofi -show drun -drun-display-format {name}

# terminal
super + {_,ctrl + } Return
	{kitty,alacritty}

# browser
super + b
	vivaldi-stable

# toggle polybar
super + shift + b
	polybar bspwm

# toggle fullscreen
super + {_,shift + }f
	bspc node -t "~"{fullscreen},{floating,tiled}

# bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

# focus and move window
super + {_,shift + }{h,Left,j,Down,k,Up,l,Right}
	bspc node -{f,s} {west,west,south,south,north,north,east,east}

super + bracket{left,right}
	bspc node -f {prev,next}

# switch workspace or send window to other workspace
super + ctrl + {_,shift + }{h,Left,l,Right}
	bspc {desktop -f,node -d} {prev,prev,next,next}.local

# switch and send window to other workspace
super {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# resize window
super + alt + {h,j,k,l}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# move focused window to the next workspace and then switch to that workspace
alt + shift + {h,l}
	id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

