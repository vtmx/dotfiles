{
  // Window
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  "window.title": "${activeEditorShort}",
  "window.titleBarStyle": "custom",
  "window.restoreWindows": "none",

  // Editor
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'BlexMono Nerd Font Medium', 'IBM Plex Mono', Consolas, monospace",
  "editor.fontLigatures": "'zero', 'ss02'",
  "editor.fontSize": 14,
  "editor.fontWeight": "500",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.glyphMargin": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.5,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.semanticHighlighting.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "comments": "#5c6370",
    "textMateRules": [ { "scope": "comment", "settings": { "fontStyle": "italic" } } ]
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Files
  "files.autoSave": "off",
  "files.defaultLanguage": "${activeEditorLanguage}",

  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,

  // Html
  "html.autoClosingTags": false,

  // Terminal
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "cmd",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'BlexMono Nerd Font', 'IBM Plex Mono', Consolas, monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "500",
  "terminal.integrated.profiles.linux": { "bash": { "path": "/usr/bin/bash" } },
  "terminal.integrated.profiles.windows": { "cmd": { "path": "C:\\Windows\\System32\\cmd.exe" } },

  // Search
  "search.exclude": { "**/node_modules": true, "**/dist": true },

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Workbench
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.editor.enablePreview": true,
  "workbench.editor.labelFormat": "default",
  "workbench.iconTheme": "vs-minimal",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "editor.background": "#23272e",
    "editor.selectionBackground": "#3d4556",
    "editor.selectionHighlightBorder": "#00000000",
    "editor.wordHighlightBackground": "#00000000",
    "editor.wordHighlightBorder": "#00000000",
    "editorBracketMatch.background": "#00000000",
    "editorBracketMatch.border": "#00000000",
    "editorBracketHighlight.foreground1": "#e5c07b",
    "editorBracketHighlight.foreground2": "#c678dd",
    "editorBracketHighlight.foreground3": "#61afef",
    "editorBracketHighlight.foreground4": "#56b6c2",
    "editorBracketHighlight.foreground5": "#d19a66",
    "editorBracketHighlight.foreground6": "#abb2bf",
    "editorBracketHighlight.unexpectedBracket.foreground": "#e06c75",
    "editorCursor.foreground": "#abb2bf",
    "editorGroup.border": "#323740",
    "editorGroupHeader.tabsBackground": "#1e2227",
    "editorOverviewRuler.border": "#00000000",
    "panel.border": "#393e48",
    "panel.background": "#1e2227",
    "sideBar.background": "#1e2227",
    "statusBar.background": "#1e2227",
    "statusBar.noFolderBackground": "#1e2227",
    "statusBar.debuggingBackground": "#1e2227",
    "tab.activeBorder": "#21252b",
    "tab.border": "#21252b",
    "titleBar.activeBackground": "#1e2227",
    "terminal.background": "#1e2227",
    "terminalCursor.background": "#abb2bf"
  },

  // Plugins

  // Code Runner
  "code-runner.runInTerminal": true,

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "firefox",

  // OneDark
  "oneDarkPro.italic": false,

  // Prettier
  "javascript.preferences.quoteStyle": "single",
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "html.format.wrapLineLength": 0,
  "[autoit]": { "editor.tabSize": 2, "editor.detectIndentation": true },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": null, "editor.formatOnSave": false, "editor.wordWrap": "off" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[vue]": { "editor.defaultFormatter": "octref.vetur" },

  // SpellCheck Bash
  "shellcheck.exclude": ["SC1091", "SC2154"],

  // Vetur
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatter.css": "prettier",
  "vetur.format.defaultFormatter.scss": "prettier",
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.defaultFormatter.js": "vscode-typescript",

  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": { "wrap_attributes": "auto" },
    "prettier": { "singleQuote": true, "printWidth": 120 }
  },

  // ZenMode
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,

  // Vim
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#61afef",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": false,
  "vim.insertModeKeyBindingsNonRecursive": [
    // Go to normal mode
    { "before": ["k", "j"], "after": ["<esc>"] },

    // Go to prev char
    { "before": ["<c-h>"], "after": ["left"] },

    // Go to prev char
    { "before": ["<c-l>"], "after": ["right"] },

    // Paste register
    { "before": ["<c-v>"], "after": ["c-r", "\""] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Enter in command mode
    { "before": ["รง"], "after": [":"] },

    // Cut to clipboard
    { "before": ["d", "l"], "after": ["\"", "+", "d", "d"] },

    // Go to symbol
    { "before": ["g", "s"], "commands": ["workbench.action.gotoSymbol"] },

    // Go to begin line
    { "before": ["H"], "after": ["^"] },

    // Go to end line
    { "before": ["L"], "after": ["$"] },

    // Create mark
    { "before": ["M"], "after": ["`"] },

    // Play macro
    { "before": ["Q"], "after": ["@", "q"] },

    // Sneak
    { "before": [ "s" ], "after": [ "<leader>", "<leader>", "s" ] },

    // Undo
    { "before": ["u"], "commands": ["undo"] },

    // Undo
    { "before": ["U"], "commands": ["redo"] },

    // Split vertical
    { "before": ["v", "v"], "commands": ["workbench.action.moveEditorToNextGroup"] },

    // Cut no register
    { "before": ["x"], "after": ["\"", "_", "x"] },

    // Yank line to clipboard
    { "before": ["y", "l"], "after": ["\"", "+", "y", "y"] },

    // Yank all content to clipboard
    { "before": ["y", "%"], "after": ["G", "V", "g", "g", "\"", "+", "y", "c-o", "c-o", "z", "z"] },

    // Yank until endline
    { "before": ["Y"], "after": ["y", "$"] },

    // Go to mark
    { "before": ["'"], "after": ["\""] },

    // Add indent
    { "before": [">"], "after": [">", ">"] },

    // Remove indent
    { "before": ["<"], "after": ["<", "<"] },

    // Down and middle page
    { "before": ["<c-d>"], "after": ["<c-d>", "z", "z"] },

    // Find
    { "before": ["<c-f>"], "commands": ["actions.find"] },

    // Remove hightlight search
    { "before": ["<c-l>"], "commands": [":noh"] },

    // Find and replace
    { "before": ["<c-h>"], "commands": ["editor.action.startFindReplaceAction"] },

    // Quick open
    { "before": ["<c-p>"], "commands": ["workbench.action.quickOpen"] },

    // Redo
    { "before": ["<c-r>"], "commands": ["redo"] },

    // Open explorer
    { "before": ["<c-s-e>"], "commands": ["viewContainer.workbench.view.explorer.enabled"] },

    // Open global find
    { "before": ["<c-s-f>"], "commands": ["workbench.action.findInFiles"] },

    // Open global replace
    { "before": ["<c-s-h>"], "commands": ["workbench.action.replaceAllInFolder"] },

    // Leader

    // Select all text
    { "before": ["<leader>", "a"], "after": ["G", "V", "g", "g"] },

    // Cut to clipboard
    { "before": ["<leader>", "d"], "after": ["m", "t", "v", "i", "w", "\"", "+", "d", "`", "t"] },

    // Open explorer
    { "before": ["<leader>", "e"], "commands": ["workbench.action.toggleSidebarVisibility"] },

    // Open find files
    { "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"] },

    // Join lines
    { "before": ["J"], "after": ["m", "z", "J", "`", "z"] },

    // Open new tab
    { "before": ["<leader>", "n"], "commands": ["workbench.action.files.newUntitledFile"] },

    // Add new line below in normal mode
    { "before": ["<leader>", "o"], "after": ["m", "`", "o", "<esc>", "`", "`"] },

    // Add new line above in normal mode
    { "before": ["<leader>", "O"], "after": ["m", "`", "O", "<esc>", "`", "`"] },

    // Paste clipboard after text
    { "before": ["<leader>", "p"], "after": ["\"", "+", "g", "p"] },

    // Pasta clipboard before text
    { "before": ["<leader>", "P"], "after": ["\"", "+", "g", "P"] },

    // Quit
    { "before": ["<leader>", "q"], "commands": ["workbench.action.quit"] },

    // Yank to clipboard
    { "before": ["<leader>", "y"], "after": ["m", "t", "v", "i", "w", "\"", "+", "y", "`", "t"] },

    // Enter in zen mode
    { "before": ["<leader>", "z"], "commands": ["workbench.action.toggleZenMode"] },

    // Open file
    { "before": ["<leader>", "ctrl+o"], "commands": ["workbench.action.files.openFileFolder"] },

    // Paste in new line above
    { "before": ["<leader><leader>", "p"], "after": ["o", "<esc>", "\"", "+", "g", "P", "<esc>"] },
    
    // Paste in new line below
    { "before": ["<leader><leader>", "P"], "after": ["O", "<esc>", "\"", "+", "g", "P", "<esc>"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [

    // Exit to visual mode
    { "before": ["รง"], "after": ["<esc>"] },

    // Yank to clipboard
    { "before": ["y"], "after": ["y", "g", "v", "<esc>"] },

    // Go to begin text
    { "before": ["H"], "after": ["^"] },

    // Go to end text
    { "before": ["L"], "after": ["$", "h"] },

    // Add indent
    { "before": [">"], "after": [">", "g", "v"] },

    // Remove indent
    { "before": ["<"], "after": ["<", "g", "v"] },
    
    // Exit visual mode
    { "before": ["<c-c>"], "after": ["esc"] },

    // Leader

    // Cut to clipboard
    { "before": ["<leader>", "d"], "after": ["\"", "+", "x"] },

    // Paste clipboard
    { "before": ["<leader>", "p"], "after": ["\"", "+", "g", "p"] },

    // Yank to clipboard
    { "before": ["<leader>", "y"], "after": ["\"", "+", "y", "g", "v", "<esc>"] }
  ]
}
