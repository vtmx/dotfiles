{
  // Editor
  "breadcrumbs.enabled": false,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": true,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'IBM Plex Mono', monospace",
  "editor.fontLigatures": "'zero'",
  "editor.fontSize": 14,
  "editor.fontWeight": "500",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.5,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "none",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Files
  "files.autoSave": "off",
  "files.defaultLanguage": "${activeEditorLanguage}",

  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Terminal
  "terminal.integrated.automationShell.windows": "C:\\Windows\\System32\\cmd.exe",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'BlexMono Nerd Font Mono', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "500",
  "terminal.integrated.profiles.linux": {
    "fish": {
      "path": "/usr/bin/fish"
    }
  },

  // Window
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",

  // Workbench
  // https://code.visualstudio.com/api/references/theme-color
  // https://themes.vscode.one/edit/local/
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.editor.enablePreview": true,
  "workbench.iconTheme": "quill-icons",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": false,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1e2227",
    "tab.border": "#21252b",
    // "sideBar.background": "#23272e",
    // "editor.background": "#23272e",
    "panel.border": "#1e2227",
    "panel.background": "#1e2227",
    "editor.selectionHighlightBorder": "#23272e00",
    "editorBracketHighlight.foreground1": "#e5c07b",
    "editorBracketHighlight.foreground2": "#c678dd",
    "editorBracketHighlight.foreground3": "#61afef",
    "editorBracketHighlight.foreground4": "#56b6c2",
    "editorBracketHighlight.foreground5": "#d19a66",
    "editorBracketHighlight.foreground6": "#abb2bf",
    "editorBracketHighlight.unexpectedBracket.foreground": "#e06c75",
    "editorCursor.foreground": "#abb2bf",
    "terminal.background": "#1e2227",
    "terminalCursor.background": "#abb2bf",
    "statusBar.background": "#1e2227",
    "statusBar.noFolderBackground": "#23272e",
    "statusBar.debuggingBackground": "#23272e"
  },

  // Plugins

  // Code Runner
  "code-runner.runInTerminal": true,

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "chrome",

  // One Dark Pro
  "oneDarkPro.italic": false,

  // Prettier
  "javascript.preferences.quoteStyle": "single",
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "html.format.wrapLineLength": 0,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },

  // Vetur
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.format.defaultFormatter.css": "prettier",
  "vetur.format.defaultFormatter.scss": "prettier",
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.defaultFormatter.ts": "prettier",

  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true,
      "printWidth": 120
    }
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },

  // Vim
  //"vim.statusBarColorControl": true,
  //"vim.statusBarColors.normal": ["#98c379", "#1e222a"],
  //"vim.statusBarColors.insert": "#57a5ed",
  //"vim.statusBarColors.visual": "#bf6dd8",
  //"vim.statusBarColors.visualline": "#bf6dd8",
  //"vim.statusBarColors.visualblock": "#bf6dd8",
  //"vim.statusBarColors.replace": "#dc6069",
  //"vim.statusBarColors.commandlineinprogress": "#d7b06a",
  //"vim.statusBarColors.searchinprogressmode": "#dc6069",
  //"vim.statusBarColors.easymotionmode": "red",
  //"vim.statusBarColors.easymotioninputmode": "red",
  //"vim.statusBarColors.surroundinputmode": "red",
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 150,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<c-h>": false,
    "<c-l>": false
  },
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["k", "j"],
      "after": ["<esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "after": [">", ">"]
    },
    {
      "before": ["<"],
      "after": ["<", "<"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["Q"],
      "after": ["@", "q"]
    },
    {
      "before": ["M"],
      "after": ["M", "`", "m"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["<leader>", "<esc>"],
      "commands": [":noh"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["v", "v"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["c-h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["c-l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.files.newUntitledFile"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeAllGroups"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["y"],
      "after": ["y", "g", "v", "<esc>"]
    },
    {
      "before": ["<space>", "k", "j"],
      "after": ["<esc>"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "security.workspace.trust.untrustedFiles": "open",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
