{
  // Window
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "toggle",
  "window.title": "${activeEditorShort}",
  "window.titleBarStyle": "custom",
  "window.restoreWindows": "none",

  // Editor
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingOvertype": "never",
  "html.autoClosingTags": false,
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'BlexMono Nerd Font Medium', 'IBM Plex Mono', Consolas, monospace",
  "editor.fontLigatures": "'zero', 'ss02'",
  "editor.fontSize": 14,
  "editor.fontWeight": "500",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.glyphMargin": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.5,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.semanticHighlighting.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "comments": "#5c6370",
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Files
  "files.autoSave": "off",
  "files.defaultLanguage": "${activeEditorLanguage}",

  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,

  // Terminal
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "cmd",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'BlexMono Nerd Font', 'IBM Plex Mono', Consolas, monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontWeightBold": "500",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash"
    }
  },
  "terminal.integrated.profiles.windows": {
    "cmd": {
      "path": "C:\\Windows\\System32\\cmd.exe"
    }
  },

  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // ZenMode
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "vs-minimal",
  "workbench.editor.enablePreview": true,
  "workbench.editor.labelFormat": "default",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1e2227",
    "tab.border": "#21252b",
    "tab.activeBorder": "#21252b",
    "sideBar.background": "#1e2227",
    "panel.border": "#393e48",
    "panel.background": "#1e2227",
    "editor.background": "#23272e",
    "editor.selectionBackground": "#3d4556",
    "editor.selectionHighlightBorder": "#00000000",
    "editor.wordHighlightBackground": "#00000000",
    "editor.wordHighlightBorder": "#00000000",
    "editorBracketMatch.background": "#00000000",
    "editorBracketMatch.border": "#00000000",
    "editorBracketHighlight.foreground1": "#e5c07b",
    "editorBracketHighlight.foreground2": "#c678dd",
    "editorBracketHighlight.foreground3": "#61afef",
    "editorBracketHighlight.foreground4": "#56b6c2",
    "editorBracketHighlight.foreground5": "#d19a66",
    "editorBracketHighlight.foreground6": "#abb2bf",
    "editorBracketHighlight.unexpectedBracket.foreground": "#e06c75",
    "editorCursor.foreground": "#abb2bf",
    "editorGroup.border": "#323740",
    "editorGroupHeader.tabsBackground": "#1e2227",
    "editorOverviewRuler.border": "#00000000",
    "terminal.background": "#1e2227",
    "terminalCursor.background": "#abb2bf",
    "statusBar.background": "#1e2227",
    "statusBar.noFolderBackground": "#1e2227",
    "statusBar.debuggingBackground": "#1e2227"
  },

  // Git
  "git.openRepositoryInParentFolders": "never",

  // Plugins

  // OneDark
  "oneDarkPro.italic": false,

  // Code Runner
  "code-runner.runInTerminal": true,

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "firefox",

  // Prettier
  "javascript.preferences.quoteStyle": "single",
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "html.format.wrapLineLength": 0,
  "[autoit]": {
    "editor.tabSize": 2,
    "editor.detectIndentation": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.wordWrap": "off"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },

  // SpellCheck Bash
  "shellcheck.exclude": ["SC1091", "SC2154"],

  // Svelte
  "svelte.enable-ts-plugin": true,

  // Vetur
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatter.css": "prettier",
  "vetur.format.defaultFormatter.scss": "prettier",
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.defaultFormatter.js": "vscode-typescript",

  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "auto"
    },
    "prettier": {
      "singleQuote": true,
      "printWidth": 120
    }
  },

  // Vim
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#e06c75",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": false,
  "vim.insertModeKeyBindingsNonRecursive": [
    // Go to normal mode
    {
      "before": ["k", "j"],
      "after": ["<esc>"]
    },
    // Go to prev char
    {
      "before": ["<c-h>"],
      "after": ["left"]
    },
    // Go to prev char
    {
      "before": ["<c-l>"],
      "after": ["right"]
    },
    // Paste register
    {
      "before": ["<c-v>"],
      "after": ["c-r", "\""]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["'"],
      "after": ["\""]
    },
    {
      "before": [">"],
      "after": [">", ">"]
    },
    {
      "before": ["<"],
      "after": ["<", "<"]
    },
    {
      "before": ["="],
      "after": ["<c-a>"]
    },
    {
      "before": ["-"],
      "after": ["<c-x>"]
    },
    {
      "before": ["%"],
      "after": ["G", "V", "g", "g"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["Q"],
      "after": ["@", "q"]
    },
    {
      "before": ["M"],
      "after": ["`"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["R"],
      "after": ["\"", "0", "p"]
    },
    {
      "before": ["รง"],
      "commands": [":noh"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["v", "v"],
      "commands": ["workbench.action.moveEditorToNextGroup"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.moveEditorToBelowGroup"]
    },
    {
      "before": ["s", "a"],
      "after": ["<plugys>"]
    },
    {
      "before": ["s", "d"],
      "after": ["<plugds>"]
    },
    {
      "before": ["s", "r"],
      "after": ["<plugcs>"]
    },
    {
      "before": ["<c-d>"],
      "after": ["<c-d>", "z", "z"]
    },
    {
      "before": ["<c-f>"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<c-h>"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    {
      "before": ["<c-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["<c-u>"],
      "after": ["<c-u>", "z", "z"]
    },
    {
      "before": ["<c-s-e>"],
      "commands": ["viewContainer.workbench.view.explorer.enabled"]
    },
    {
      "before": ["<c-s-f>"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<c-s-h>"],
      "commands": ["workbench.action.replaceAllInFolder"]
    },
    {
      "before": ["<leader>", "a"],
      "after": ["G", "V", "g", "g"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "j"],
      "after": ["m", "z", "J", "`", "z"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.files.newUntitledFile"]
    },
    {
      "before": ["<leader>", "o"],
      "after": ["m", "`", "o", "<esc>", "`", "`"]
    },
    {
      "before": ["<leader>", "O"],
      "after": ["m", "`", "O", "<esc>", "`", "`"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "g", "p", "<esc>"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["o", "<esc>", "\"", "+", "g", "P", "<esc>"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.quit"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["V", "\"", "+", "y"]
    },
    {
      "before": ["<leader>", "y", "a"],
      "after": ["G", "V", "g", "g", "\"", "+", "y", "c-o", "c-o"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["V", "\"", "+", "x"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "g", "p"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["o", "<esc>", "\"", "+", "g", "p", "<esc>"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", "<esc>"],
      "commands": [":noh"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>", "k", "j"],
      "after": ["<esc>"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["L"],
      "after": ["$", "h"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["รง"],
      "after": ["<esc>"]
    },
    {
      "before": ["y"],
      "after": ["y", "g", "v", "<esc>"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "+", "x"]
    },
    {
      "before": ["<leader>", "R"],
      "after": ["d", "<esc>", "\"", "+", "p"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y", "g", "v", "<esc>"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      "before": ["<leader>", "'"],
      "after": ["c", "'", "'", "<esc>", "P"]
    }
  ],
}
