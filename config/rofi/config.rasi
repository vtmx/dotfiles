configuration {
	modi: "drun,window,keys";

  // icons
	display-drun: "";
  display-filebrowser: "";
  display-keys: "";
	display-run: "";
  display-window: "";

  // display
  drun-display-format: "{name}";
  window-format: "{name} {title}";

  // config
	disable-history: false;
	max-history-size: 25;
	terminal: "kitty";
	show-icons: false;

	// keybindis
	kb-remove-char-back: "BackSpace";
	kb-remove-word-forward: "Control+Delete";

  // up and down
	kb-remove-to-eol: "";
	kb-row-down: "Control+j,Control+n,Down";
	kb-row-up: "Control+k,Control+p,Up";

  // next prev tab
	kb-mode-complete: "";
	kb-mode-next: "Control+l";
	kb-mode-previous: "Control+h";

  // confirm and cancel
	kb-accept-entry: "Return";
	kb-cancel: "Escape,Control+c";
}

// clear default theme
@theme "/dev/null"

// general
@import "onedarkv.rasi"

* {
	font: "BlexMono Nerd Font 11";
}

window {
	width: 600;
	padding: 0;
	background-color: @background;
	border: 1px;
	border-color: @selection;
}

mainbox {
  spacing: 0px;
	background-color: transparent;
}

message {
	background-color: transparent;
}

// File browser
textbox {
  padding: 8px 16px;
	background-color: transparent;
	text-color: @foreground;
}

// input
inputbar {
	children: [prompt, entry];
	padding: 14px 16px;
	background-color: transparent;
  border: 0 0 1px 0;
  border-color: @selection;
}
 
// icon
prompt {
  margin: 0 16px 0 0;
	background-color: transparent;
	text-color: @foreground;
}

// input
entry {
	placeholder: "";
	background-color: transparent;
	text-color: @foreground;
}

// item
listview {
	lines: 6;
	background-color: transparent;
  spacing: 0;
}

element {
	padding: 8px 16px;
	background-color: transparent;
	text-color: @foreground;
}

// hover
element selected.normal,
element selected.active {
	background-color: @selection;
	text-color: @foreground;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

// references:
// https://github.com/davatorium/rofi/blob/next/doc/rofi-theme.5.markdown
