configuration {
	modi: "drun,window,keys";

  // icons
	display-drun: "";
  display-filebrowser: "";
  display-keys: "";
	display-run: "";
  display-window: "";

  // display
  drun-display-format: "{name}";
  window-format: "{name} {title}";

  // config
	disable-history: false;
	max-history-size: 25;
	terminal: "kitty";
	show-icons: false;

	// keybindis
	kb-remove-char-back: "BackSpace";
	kb-remove-word-forward: "Control+Delete";

  // up and down
	kb-remove-to-eol: "";
	kb-row-down: "Control+j,Control+n,Down";
	kb-row-up: "Control+k,Control+p,Up";

  // next prev tab
	kb-mode-complete: "";
	kb-mode-next: "Control+l";
	kb-mode-previous: "Control+h";

  // confirm and cancel
	kb-accept-entry: "Return";
	kb-cancel: "Escape,Control+c";
}

// clear default theme
@theme "/dev/null"

// general
* {
	font: "BlexMono Nerd Font 11";
	shade0: #23272e;
	shade1: #1e2227;
	shade2: #3d4556;
	shade3: #5c6370;
	shade4: #2c313c;
	shade5: #828997;
	shade6: #979eab;
	shade7: #abb2bf;
	accent0: #e06c75;
	accent1: #d19a66;
	accent2: #e5c07b;
	accent3: #98c379;
	accent4: #56b6c2;
	accent5: #61afef;
	accent6: #c678dd;
	accent7: #be5046;
  highlight: @accent5;
}

window {
	width: 600;
	padding: 0;
	background-color: @shade1;
	border: 2px;
	border-color: @shade2;
}

mainbox {
	background-color: @shade0;
}

message {
	background-color: @shade1;
}

textbox {
  padding: 16px;
	background-color: @shade1;
	text-color: @shade7;
}

inputbar {
	children: [prompt, entry];
	background-color: @shade0;
	padding: 16px;
}
 
// icon
prompt {
  margin: 0 16px 0 0;
	background-color: transparent;
	text-color: @shade3;
}

entry {
	placeholder: "";
	background-color: transparent;
	text-color: @shade7;
}

// item
listview {
	columns: 1;
	lines: 6;
	margin: 0;
	padding: 0;
	background-color: @shade1;
	border: 0;
}

element {
	padding: 8px 16px;
	background-color: @shade1;
	text-color: @shade7;
}

element selected.normal,
element selected.active {
	background-color: @shade4;
	text-color: @shade7;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

// references:
// https://github.com/davatorium/rofi/blob/next/doc/rofi-theme.5.markdown
// vim: ft=sass
