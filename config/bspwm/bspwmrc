#!/usr/bin/env bash

# init
export SXHKD_SHELL="/usr/bin/bash"

# commands
bm="bspc monitor -d"
bc="bspc config"
br="bspc rule -a"

# workspaces
$bm 1 2 3 4 5 6 7 8 9 0

# config
$bc border_width 3
$bc window_gap 16
$bc top_padding 24
$bc bottom_padding 0
$bc left_padding 0
$bc right_padding 0
$bc split_ratio 0.50
$bc borderless_monocle true
$bc gapless_monocle true
$bc paddingless_monocle true
$bc single_monocle false
$bc focus_follows_pointer true

# theme
$bc focused_border_color "#5c6370"  
$bc normal_border_color "#23272e"
$bc active_border_color "#be5046"
$bc presel_feedback_color "#98c379"

# rules

# web
$br brave desktop='^1', follow=on focus=on
$br chromium desktop='^1', follow=on focus=on
$br firefox desktop='^1' follow=on focus=on
$br vivaldi-stable desktop='^1' follow=on focus=on

# code
$br alacritty desktop='^2' follow=on focus=on
$br code desktop='^2' follow=on focus=on
$br kitty desktop='^2' follow=on focus=on

# file
$br dolphin desktop='^3' follow=on focus=on
$br nemo desktop='^3' follow=on focus=on
$br thunar desktop='^3' follow=on focus=on

# media
$br mpv desktop='^4' follow=on focus=on state=floating
$br vlc desktop='^4' follow=on focus=on

# autostart
$HOME/.config/bspwm/autostart.sh
