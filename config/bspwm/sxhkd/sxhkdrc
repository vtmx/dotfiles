# XF86AudioMute
	# bspvolume --toggle

# Music control
# XF86Audio{Next,Prev,Play,Stop}
# 	mpc {next,prev,toggle,stop}

# Mic Volume control
# XF86Audio{Mute,MicMute}
# 	bspvolume{ --toggle, --toggle-mic}

# Apps
super + {a,b,e,g,m,p,t,s,v}
	{pamac-manager,firefox,thunar,steam,vlc,kcolorchooser,qbittorrent,flameshot gui,code}

super + alt + {p}
	{bitwarden}

super + shift + p
	bspc node -g sticky

