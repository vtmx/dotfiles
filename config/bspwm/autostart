#!/usr/bin/env bash

shopt -s globstar

bspdir=$HOME/.config/bspwm

xsetroot -cursor_name left_ptr &
pgrep -x dunst   > /dev/null || dunst -conf $bspdir/dunst/dunstrc &
pgrep -x feh     > /dev/null || feh --no-fehbg --bg-scale --randomize $bspdir/wall/** &
# pgrep -x jgmenu  > /dev/null || jgmenu --simple --config-file=$bspdir/jgmenu/jgmenurc --csv-file=$bspdir/jgmenu/menu.csv
# pgrep -x picom   > /dev/null || picom --config $bspdir/picom/picom.conf &
pgrep -x polybar > /dev/null || polybar bottom -c $bspdir/polybar/config.ini &
pgrep -x sxhkd   > /dev/null || sxhkd -c $bspdir/sxhkd/sxhkdrc &
