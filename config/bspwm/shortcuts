# Toggle polybar
super + shift + b
	$HOME/.config/bspwm/polybar/scripts/toggle

# Close, kill window
super + {_,shift + }c
	bspc node -{c,k}

# Toggle fullscreen
super + shift + f
	bspc node -t "~"{tiled,fullscreen}

# Stick window always top
super + shift + p
	bspc node -g sticky

# Quit
super + shift + q
	bspc quit

# Reload
super + shift + {r,comma}
	bspc wm -r && pkill -USR1 -x sxhkd && notify-send 'bspwm' 'Reloaded'

# Reload sxhkd
super + shift + period
  pkill -USR1 -x sxhkd && notify-send 'sxhkd' 'Reloaded'

# Help
super + shift + F1
	$HOME/.config/bspwm/conky/toggle

# Toggle floating
super + shift + space
	bspc node -t "~"{floating,tiled}

# Focus and move window
super + {_,shift + }{h,Left,j,Down,k,Up,l,Right}
	bspc node -{f,s} {west,west,south,south,north,north,east,east}

# Focus next, prev window
super + bracket{left,right}
	bspc node -f {prev,next}

# Focus next, prev local window
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

# Switch workspace or send window to other workspace
super + ctrl + {_,shift + }{h,Left,l,Right}
	bspc {desktop -f,node -d} {prev,prev,next,next}.local --follow

# Switch and send window to other workspace
super {_,shift + }{1-9}
	bspc {desktop -f,node -d} "^{1-9}" --follow

# Resize window
super + r : {h,j,k,l}
  STEP=20; SELECTION={1,2,3,4}; \
  bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
  bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Move a floating window
ctrl + shift + m : {h,Left,j,Down,k,Up,l,Right}
	bspc node -v {-20 0,-20 0,0 20,0 20,0 -20,0 -20,20 0,20 0}

# Change volume
super + {equal,minus,0}
  amixer -q set Master {'10%+','10%-',toggle} && notify-send 'Volume' "$(amixer sget Master | grep -o -m1 '\[[[:digit:]][[:digit:]]\%\]' | tr -d '\[\]')"
  #awk -F"[][]" '/Left:/ { print $2 }' <(amixer sget Master)

XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer -q set Master {10%+,10%-,toggle}

# Change audio controls
#XF86Audio{Play,Prev,Next,Stop}
	#$HOME/.config/bspwm/scripts/mediacontrolkeys {PlayPause,Previous,Next,Stop}

# Change brightness
#XF86MonBrightness{Up,Down}
  #xbacklight -{inc,dec} 5

# Edit config and shortcuts
super + {comma,period}
  {kitty -e nvim $HOME/.config/bspwm/bspwmrc, \
   kitty -e nvim $HOME/.config/bspwm/shortcuts}

# Powermenu
ctrl + alt + Delete
  $HOME/.local/bin/powermenu.sh

# Laucnher
super + space
  rofi -show drun

# Terminal
super + {_,alt + }Return
  {kitty,bspc rule -a \* -o state=floating && kitty}

# Apps
super + {a,b,e,g,m,p,t,s,v}
  {pamac-manager,firefox,dolphin,steam,vlc,kcolorchooser,qbittorrent,flameshot gui,code}

# Alternate apps
super + alt + {e,p}
  {thunar,bitwarden-desktop}

Print
  flameshot gui

# Mouse
~button3
  if ! bspc query -N -d focused; then jgmenu; fi

