#!/usr/bin/env bash

set -o errexit

argv="$1"

# Test if has argument
[[ -z "$argv" ]] && echo "Need a name for script" && exit 1

# Check if file exit
[[ -e "$argv" ]] && echo "File already exist" && exit 1

# Create script
echo "#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

" > "$argv"

# Make script executable
chmod +x "$argv"

# Open script
$VISUAL "$argv"

