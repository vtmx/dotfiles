#!/usr/bin/env bash

# Get dir
if [[ "$1" ]]; then
  mapfile -t files < <(find "$1" -type f)
else
  mapfile -t files < <(find . -type f)
fi

# Count total files
numberfiles=${#files[@]}
digit=$(printf "%d" "$numberfiles" | wc -c)

# Default 2 digits
[[ $numberfiles -eq 1 ]] && digit=2

listfiles() {
  count=1
  for file in "${files[@]}"; do
    ext="${file##*.}"
    newfile=$(printf "$(dirname "$file")/$(date -r "$file" +%Y-%m-%d)-%0${digit}d.$ext\n" "$count")

    case $1 in
      mv) mv "$file" "$newfile" ;;
       *) echo "$file >> $newfile" ;;
    esac

    ((count++))
  done
}

# List files
listfiles
echo
read -p "Rename? [y/N]: " rename

case $rename in
  [yY]) listfiles mv ;;
     *) exit 0       ;;
esac
