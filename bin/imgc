#!/usr/bin/env bash
  
shopt -s extglob

case "$1" in
  avif) format=avif ;;
  *   ) format=jxl  ;;
esac

for file in *.@(gif|jpg|jpeg|png|tif); do
  old_files+=("$file")
  file_size=$(du -h "$file" | awk '{print $1}')

  case $format in
    avif)
      newfile="${file%.*}.avif"
      avifenc --lossless "$file" "$newfile" &>/dev/null
      ;;
    *)
      newfile="${file%.*}.jxl"
      cjxl "$file" "$newfile" &>/dev/null
      ;;
  esac

  new_file_size=$(du -h "$newfile" | awk '{print $1}')
  echo "$file_size -> $new_file_size ${file%.*}"
done

echo
read -p 'Deseja remover antigos? (y/N): ' confirm

if [[ $confirm =~ [yY] ]]; then
for file in *.@(gif|jpg|jpeg|png|tif); do
    rm "$file"
  done
fi
