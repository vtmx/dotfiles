#!/usr/bin/env bash
  
shopt -s extglob

for file in *.@(m4a|wav); do
  old_files+=("$file")
  file_size=$(du -h "$file" | awk '{print $1}')
  newfile="${file%.*}.mp3"
  ffmpeg -i "$file" -c:a libmp3lame "$newfile" 2>/dev/null
  new_file_size=$(du -h "$newfile" | awk '{print $1}')
  echo "$file_size -> $new_file_size ${file%.*}"
done

echo
read -p 'Deseja remover antigos? (y/N): ' confirm

if [[ $confirm =~ [yY] ]]; then
  for file in "${old_files[@]}"; do
    rm "$file"
  done
fi
