#!/usr/bin/env bash

if [[ -f $HOME/.groq.key ]]; then
  groq_key=$(<$HOME/.groq.key)
else
  echo 'error: need apikey in ~/.groq.key'
  exit 1
fi

reqs=(glow gum jq)
type "${reqs[@]}" &>/dev/null || { echo 'error: need gum, glow and jq'; exit 1; }

if [[ "$*" ]]; then
  msg="$*"
else
  msg=$(gum input --cursor.foreground=7 --prompt='‚ùØ ' --prompt.foreground=2 --placeholder='Mensagem para ia' --width=80)
  echo "  $msg"
fi

[[ "$msg" ]] || { echo 'error: no message'; exit 1; }

curl -s -X POST 'https://api.groq.com/openai/v1/chat/completions' \
  -H "Authorization: Bearer $groq_key" \
  -H 'Content-Type: application/json' \
  -d '{
    "messages": [
      {
        "role": "user",
        "content": "'"$msg"'"
      }
    ],
    "model": "llama3-70b-8192"
  }' | jq -r '.choices[0].message.content' | glow -s "$HOME/.config/glow/onedark.json"


# curl 'https://api.deepseek.com/chat/completions' \
# -H "Authorization: Bearer $deepseek_key" \
# -H "Content-Type: application/json" \
# -d '{
#       "model": "deepseek-chat",
#       "messages": [
#         {
          #   "role": "user",
          #   "content": "'"$msg"'"
          # }
#       ],
